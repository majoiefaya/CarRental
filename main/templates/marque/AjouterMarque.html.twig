{% extends 'base.html.twig' %}

{% block header %}
<div class="hero inner-page" style="background-image: url({{asset('images/hero_1_a.jpg')}})">
    <div class="container">
      <div class="row align-items-end ">
        <div class="col-lg-5">

          <div class="intro">
            <h1><strong>Ajout d'Une Marque</strong></h1>
            {% if is_granted('ROLE_GERANT') %}
              <div class="custom-breadcrumbs"><a href="{{path('Acceuil')}}">Acceuil</a> <span class="mx-2">/</span></div>
            {% endif %}
          </div>

        </div>
      </div>
    </div>
  </div>
{% endblock %}



{% block Description %}
