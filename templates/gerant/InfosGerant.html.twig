            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="d-flex justify-content-around">
                <span class="mx-1"><a href="https://wa.me/+228{{gerant.telephone}}?text=Reponse A Votre RÃ©servation" class="btn btn-outline-dark">Watsapp</a><span class="mx-1"></strong>
                <span class="mx-1"><a href="tel:+228{{gerant.telephone}}" class="btn btn-outline-dark">Appeler</a></span>
                <span class="mx-1"><a href="sms:+228{{gerant.telephone}}" class="btn btn-outline-dark">SMS</a></span>
            </div>
        {% endif %}
    </div>

{% endblock %}