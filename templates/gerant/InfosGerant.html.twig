{% extends 'base.html.twig' %}

{% block header %}
        {% include 'dashboard/header.html.twig'%}
{% endblock %}


{% block Description %}
    <div class="testimonial-2">
        <form method="post" action="{{ path('SupprimerDef', {'id': gerant.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer Votre Compte?');">
            <button class="btn btn-outline-primary">Supprimer Votre Compte</button>
        </form> 
        <blockquote class="mb-4">
        <h2>Voici Les Informations de votre Compte</h2>
        <p>Role:{{ gerant.NomRole }}    Id:{{ gerant.id }}</p>
        <p>Telephone:{{ gerant.Telephone }}</p>
        <p>DateNaissance:{{ gerant.DateNaissance ? gerant.DateNaissance|date('Y-m-d') : '' }}</p>
        <p>Username:{{ gerant.UserName }}
        </blockquote>
        <div class="d-flex v-card align-items-center">
        <img src="{{asset('GerantImages/')~ gerant.image}}" alt="Image" class="img-fluid mr-3">
        <div class="author-name">
            <span class="d-block">{{ gerant.nom }}   {{ gerant.prenom }}</span>
